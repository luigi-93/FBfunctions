{
  "compilerOptions": {
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "declaration": true,
      "lib": ["es2021"],
      "module": "CommonJS",
      "noImplicitReturns": true,
      "outDir": "lib",
      "removeComments": true,
      "sourceMap": true,
      "strict": true,
      "target": "es2021",
      "typeRoots": ["./types", "./node_modules/@types"]
  }
}

