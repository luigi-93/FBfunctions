{
  "name": "firebaselibrary",
  "version": "0.1.0",
  "description": "Create a library which simplifies access to Firebase",
  "main": "src/app.ts",
  "scripts": {
    "clean": "rimraf dist build",
    "routes": "tsoa routes",
    "swagger": "tsoa spec",
    "prebuild": "yarn clean && yarn routes && yarn swagger",
    "build": "tsc",
    "serve": "yarn build && yarn start",
    "start": "node dist/src/app.js",
    "dev": "ts-node src/app.ts",
    "test": "ts-mocha --project test/tsconfig.json --require tsconfig-paths/register 'test/**/*.spec.ts' --exit --timeout 35000",
    "debug": "ts-node --inspect src/app.ts",
    "lint": "eslint src --ext .ts",
    "doc": "typedoc --out docs src",
    "postbuild": "cp -R src/assets dist/assets"
  },
  "engines": {
    "node": ">=16.0.0",
    "yarn": ">=1.22.0"
  },
  "keywords": [],
  "author": "Giggi_fa",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/express": "^5.0.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^22.8.2",
    "@types/swagger-ui-express": "^4.1.7",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.2.0",
    "mocha": "^9.2.0",
    "prettier": "^2.8.0",
    "ts-mocha": "^9.0.2",
    "ts-node": "^10.5.0",
    "typedoc": "^0.26.11",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@sentry/node": "^8.41.0",
    "@sentry/profiling-node": "^8.41.0",
    "@types/lodash.add": "^3.7.9",
    "@types/uuid": "^10.0.0",
    "FBfunctions": "https://github.com/luigi-93/FBfunctions.git",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "firebase": "^11.1.0",
    "firebase-admin": "^12.5.0",
    "firebase-functions": "^6.1.2",
    "git": "^0.1.5",
    "input": "^1.0.1",
    "inversify": "^6.1.3",
    "inversify-binding-decorators": "^4.0.0",
    "rimraf": "^6.0.1",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.5.1",
    "uuid": "^11.0.3",
    "winston": "^3.17.0"
  }
}
