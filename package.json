{
  "name": "firebaselibrary",
  "version": "0.1.0",
  "description": "Create a library which simplifies access to Firebase",
  "main": "src/app.ts",
  "scripts": {
    "clean": "rimraf dist build",
    "clean:all": "rimraf dist build node_modules",
    "tsoa": "tsoa spec && tsoa routes",
    "routes": "tsoa routes",
    "swagger": "tsoa spec",
    "compile": "tsc -p src/tsconfig.json",
    "watch": "tsc -p src/tsconfig.json --watch",
    "prebuild": "yarn clean && yarn routes && yarn swagger",
    "build": "tsc -p src/tsconfig.json",
    "postbuild": "copyfiles -u 1 \"src/assets/**/*\" dist",
    "serve": "yarn build && yarn start",
    "start": "node dist/src/local.js",
    "start:prod": "NODE_ENV=production node dist/src/app.js",
    "deploy:dev": "firebase use default && firebase functions:config:set app.env=dev && yarn build && firebase deploy --only functions",
    "deploy:prod": "firebase use prod && firebase functions:config:set app.env=prod && yarn build && firebase deploy --only functions",
    "use:dev": "firebase use default",
    "use:prod": "firebase use prod",
    "dev": "ts-node-dev --respawn -P src/tsconfig.json src/app.ts",
    "debug": "ts-node -P src/tsconfig.json --inspect src/app.ts",
    "lint": "eslint . src --ext .js,.ts",
    "lint:fix": "eslint . src --ext .js,.ts --fix",
    "test": "ts-mocha --project test/tsconfig.json --require tsconfig-paths/register 'test/**/*.spec.ts' --exit --timeout 35000",
    "test:watch": "ts-mocha --project test/tsconfig.json --require tsconfig-paths/register 'test/**/*.spec.ts' --exit --timeout 35000",
    "test:coverage": "nyc yarn test",
    "test:container": "ts-node src/test/container-test.ts",
    "doc": "typedoc --out docs src",
    "doc:serve": "serve docs"
  },
  "engines": {
    "node": "18",
    "yarn": ">=1.22.0"
  },
  "keywords": [],
  "author": "Giggi_fa",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/express": "^5.0.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^22.10.7",
    "@types/rimraf": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.7",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.2.0",
    "glob": "^8.1.0",
    "mocha": "^9.2.0",
    "prettier": "^3.4.2",
    "ts-mocha": "^9.0.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.26.11",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@sentry/node": "^8.41.0",
    "@sentry/profiling-node": "^8.41.0",
    "@types/joi": "^17.2.3",
    "@types/lodash.add": "^3.7.9",
    "@types/uuid": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "firebase": "^10.7.0",
    "firebase-admin": "^11.11.0",
    "firebase-functions": "^4.5.0",
    "firebase-tools": "^13.29.1",
    "git": "^0.1.5",
    "input": "^1.0.1",
    "inversify": "^6.1.3",
    "inversify-binding-decorators": "^4.0.0",
    "joi": "^17.13.3",
    "lru-cache": "^7.18.3",
    "rimraf": "^5.0.5",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "uuid": "^11.0.3",
    "winston": "^3.17.0"
  }
}
