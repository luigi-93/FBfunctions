        "src/**/*.mjs",
        "src/**/*.ts",
        "src/**/*.cjs",
        "src/**/*.js",
        "build/**/*"
    ],
    "compilerOptions": {
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "build/*"]
        }
    }
}